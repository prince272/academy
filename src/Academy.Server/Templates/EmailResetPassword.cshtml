                                <p class="o_mb"><strong>Your security code is below</strong></p>
                                <table role="presentation" cellspacing="0" cellpadding="0" border="0">
                                    <tbody>
                                        <tr>
                                            <td width="284" class="o_bg-ultra_light o_br o_text-lg o_sans o_px-xs o_py-md" align="center">
                                                <p class="o_text-dark"><strong>@(Model.Account.Code)</strong></p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!--[if mso]></td></tr></table><![endif]-->
