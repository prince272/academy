@model (string Subject, User User, ResetPasswordModel Account)
@{
    Layout = "_EmailLayout";
}

@section head {

}

@section body {
<!-- preview-text -->
<table width="100%" cellspacing="0" cellpadding="0" border="0" role="presentation">
    <tbody>
        <tr>
            <td class="o_hide" align="center">We've received a request to reset the password of the account associated with <b>@(Model.User.Email)</b>. If you didn’t request this email, there’s nothing to worry about — you can safely ignore it.</td>
        </tr>
    </tbody>
</table>
}

<!-- content-lg-left -->
<table width="100%" cellspacing="0" cellpadding="0" border="0" role="presentation">
    <tbody>
        <tr>
            <td class="o_bg-light o_px-xs" align="center">
                <!--[if mso]><table width="800" cellspacing="0" cellpadding="0" border="0" role="presentation"><tbody><tr><td><![endif]-->
                <table class="o_block-lg" width="100%" cellspacing="0" cellpadding="0" border="0" role="presentation">
                    <tbody>
                        <tr>
                            <td class="o_bg-white o_px-md o_py" align="center">
                                <!--[if mso]><table width="584" cellspacing="0" cellpadding="0" border="0" role="presentation"><tbody><tr><td align="left"><![endif]-->
                                <div class="o_col-6s o_sans o_text o_text-secondary o_left">
                                    <h2 class="o_heading o_text-dark o_mb-xs">@(Model.Subject)</h2>

                                    <p>Hi @(Model.User.FullName),<br />We've received a request to reset the password of the account associated with <b>@(Model.User.Email)</b>. No changes have been made to the account yet.</p>
                                </div>
                                <!--[if mso]></td></tr></table><![endif]-->
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!--[if mso]></td></tr></table><![endif]-->
            </td>
        </tr>
    </tbody>
</table>
<!-- label-lg -->
<table width="100%" cellspacing="0" cellpadding="0" border="0" role="presentation">
    <tbody>
